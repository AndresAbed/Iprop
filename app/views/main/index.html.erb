<!--slider-->
<section class="photo-slider">
  <div class="overlay-darken"></div>
    <div class="slider cycle-slideshow"><img src="<%= image_path('puerto-madero.jpg')%>" class="photo-slider-img"><img src="<%= image_path('pileta.jpg')%>" class="photo-slider-img"><img src="<%= image_path('edificios-estilo.jpg') %>" class="photo-slider-img"><img src="<%= image_path('livingroom.jpg')%>" class="photo-slider-img"></div>
  <div class="photo-slider-slogan photo-slider-slogan-propiedades">
    <h1 class="photo-slider-slogan-title-propiedades">Transformamos tus ideas en realidad</h1>
  </div>
  <%= form_tag properties_path, method: 'post', class: "buscador" do %>
    <%= select_tag :operation, options_for_select(['Venta', 'Alquiler', 'Alquiler temporal'], params[:operation]), class: "buscador-select buscador-select-01", id: "operation" %>
    <%= select_tag :property_type, options_for_select(Tag.all.collect{ |t| t.name }, params[:property_type]), class: "buscador-select" %>
    <%= text_field_tag :address, params[:address], placeholder: "Buscar por ubicación", class: "buscador-input", autocomplete: "off", id: "searchTextField" %>
    <%= button_tag(type: "submit", class: "buscador-button", name: nil) do %>
      <span class="icon-search buscador-icon"></span>
      Buscar
    <% end %>
  <% end %>
</section>
<!--features-->
