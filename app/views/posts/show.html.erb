</header>
<section class="novedades-inside">
  <h1 class="novedades-inside-title">Novedades</h1>
  <article class="novedades-inside-article">
    <header class="novedades-inside-header">
      <h2 class="novedades-inside-header-title"><%= @post.title %></h2>
      <h4 class="novedades-inside-header-subtitle"><%= @post.subtitle %></h4>
      <p class="novedades-inside-date"> <span class="icon-clock"> </span><%= l @post.created_at, format: "%B %d - %Y, %H:%M" %></p>
    </header>
    <div class="novedades-inside-img-container"><img src="<%= @post.image.url %>" class="novedades-inside-img"></div>
    <p class="novedades-inside-copy"><%= raw(@post.body) %></p>
  </article>  
  <aside class="novedades-aside">
    <h3 class="novedades-aside-title">Más novedades</h3>
    <div class="novedades-aside-item-wrap">
      <% @posts.each do |post| %>
        <div class="novedades-aside-item">
          <h4 class="novedades-aside-item-title"><%= link_to post.title, post_path(post) %></h4>
          <p class="novedades-aside-item-date"> <span class="icon-clock"> </span><%= l post.created_at, format: "%B %d - %Y, %H:%M" %></p>
        </div>
      <% end %>
    </div>
  </aside>
</section>
<novedades-inside-aside class="jade"></novedades-inside-aside>
